generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

enum Roles {
    USER
    ADMIN
    MANAGER
}

model user {
    id  String @id @default(uuid())
    firstName String
    lastName String
    userName String @unique
    email String    @unique
    password String
    role Roles @default(USER)
    refreshToken String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}