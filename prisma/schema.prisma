generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

enum Role {
    USER
    ADMIN
    MERCHANT
	@@map("Roles")
}

model user {
    id  String @id @default(uuid())
    firstName String
    lastName String
    userName String @unique
    email String    @unique
    password String
    role Role @default(USER)
    refreshToken String?
    resetToken  String?
    resetTokenEx    DateTime?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}