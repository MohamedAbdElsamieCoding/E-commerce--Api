generator client {
    provider = "prisma-client-js"
    output = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

enum Role {
    USER
    ADMIN
    MANAGER
}

model user {
    id  String @id @default(uuid())
    firstName String
    lastName String
    userName String @unique
    email String
    password String
    role Role @default(USER)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}